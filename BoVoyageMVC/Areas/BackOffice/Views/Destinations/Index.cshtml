@model IEnumerable<BoVoyageMVC.Models.Destination>

@{
    ViewBag.Title = "Destinations ";
}

<h2>Liste des Destinations</h2>

<p>
    @Html.ActionLink("Ajouter une Destination", "Create",null, new { @class = "btn btn-info" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Continent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Region)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Continent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Region)
        </td>
        <td>
            @Html.Raw(item.Description.ToString())
        </td>
        <td>
            <a href="@Url.Action("edit", new { id=item.Id })"><i class="glyphicon glyphicon-edit text-warning"></i></a> |
            <a href="@Url.Action("Details", new { id=item.Id })"><i class="glyphicon glyphicon-search"></i></a> |
        </td>
    </tr>
}

</table>
