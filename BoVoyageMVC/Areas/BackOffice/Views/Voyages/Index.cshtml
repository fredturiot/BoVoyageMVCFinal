@model IEnumerable<BoVoyageMVC.Models.Voyage>

@{
    ViewBag.Title = "Voyages - BackOffice";
}

<h2>Liste des Voyages</h2>

<div  class="container " id="search">
    <form class="form-group row" action="@Url.Action("Search", "Voyages" )" method="post" enctype="multipart/form-data">
        <div class="form-group col-md-6">
            <label for="DateAller">Période</label>
            <a> De <input type="date" class="form-control" id="DepartureDate" name="DepartureDate" /> </a> <br />
            <a> A <input type="date" class="form-control" id="ReturnDate" name="DepartureDate" /> </a>
        </div>
        <div class="form-group col-md-6">
            <label for="if">Destination</label>
            <input class="form-control" type="text" id="destination" name="search" />
        </div>
        <button type="submit" class="btn btn-info"> Rechercher</button>
    </form>
</div>

<p>
    @Html.ActionLink("Nouveau Voyage", "Create", null, new { @class = "btn btn-info" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AgenceVoyage.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Destination.Continent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartureDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReturnDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxCapacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Margin)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AgenceVoyage.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destination.Continent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartureDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Margin)
            </td>
            <td>
                <a href="@Url.Action("edit", new { id=item.Id })"><i class="glyphicon glyphicon-edit text-warning"></i></a> |
                <a href="@Url.Action("Details", new { id=item.Id })"><i class="glyphicon glyphicon-search"></i></a> |
                <a href="@Url.Action("delete", new { id=item.Id })"><i class="glyphicon glyphicon-trash"></i></a>
            </td>
        </tr>
    }

</table>
