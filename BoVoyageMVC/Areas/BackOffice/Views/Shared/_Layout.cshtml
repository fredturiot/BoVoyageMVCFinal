<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BackOffice BoVoyage</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body background="~/Content/img/Background2.jpg" class="parallax">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BoVoyage", "Index", "BackOffice", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Gestion des voyages <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><h4 class="dropdownTitle">Agences de voyage</h4></li>
                            <li><a href="@Url.Action("Create", "AgenceVoyages")">Ajouter</a></li>
                            <li><a href="@Url.Action("index", "AgenceVoyages")">Lister</a></li>
                            <li><h4 class="dropdownTitle">Destinations</h4class="dropdownTitle"></li>
                            <li><a href="@Url.Action("Create", "Destinations")">Ajouter</a></li>
                            <li><a href="@Url.Action("Index", "Destinations")">Lister</a></li>
                            <li><h4 class="dropdownTitle">Voyages</h4class="dropdownTitle"></li>
                            <li><a href="@Url.Action("Create", "Voyages")">Ajouter</a></li>
                            <li><a href="@Url.Action("Index", "Voyages")">Lister</a></li>
                            <li><h4 class="dropdownTitle">Assurances</h4class="dropdownTitle"></li>
                            <li><a href="@Url.Action("Create", "Assurances")">Ajouter</a></li>
                            <li><a href="@Url.Action("Index", "Assurances")">Lister</a></li>
                        </ul>
                    </li>


                    <li>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="@Url.Action("Index", "Clients")">Clients</a></li>
                        </ul>
                    </li>
                    <li>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="@Url.Action("Index", "DossierReservations")">Dossiers de Réservation</a></li>
                        </ul>
                    </li>
                    <li>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="@Url.Action("Index", "ContactMessages")">Messages Clients</a></li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">

        @Html.Partial("_PartialDisplay")
        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BoVoyage MVC Groupe 2</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
 