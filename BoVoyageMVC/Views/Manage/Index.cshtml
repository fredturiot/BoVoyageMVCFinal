@model BoVoyageMVC.Models.IndexViewModel
@{
    ViewBag.Title = "Gérer votre compte";
}

<h2>@ViewBag.Title</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
  
    <hr />
    <dl class="dl-horizontal">
        <dt>Mot de passe :</dt>
        <dd>
            
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Changer votre mot de passe", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Créer", "SetPassword")
            }
            
        </dd>
        <dt>Profile :</dt>
        <dd>
            @Html.ActionLink("Modifier", "EditClient") 
        </dd>
     
        <dt>Authentification à 2 facteurs :</dt>
        <dd>
